<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hccs_classroom_logo_background"
        android:gravity="center"
        android:text="Update Classroom Panel"
        android:textColor="#fff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/classnameguide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class Name" />

    <EditText
        android:id="@+id/classname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Class Name"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class ID" />

    <EditText
        android:id="@+id/classid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Class ID"
        android:textAlignment="center"
        android:textSize="20sp" />



    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teacher ID" />

    <EditText
        android:id="@+id/teacherid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:editable="false"
        android:hint="Teacher ID"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/cusubmit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/hccs_classroom_logo_background"
        android:text="Update"
        android:textColor="#fff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/viewclassstudent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/hccs_classroom_logo_background"
        android:text="Student List"
        android:textColor="#fff"
        android:textSize="20sp" />

</LinearLayout>